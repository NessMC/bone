{
  "root": true,
  "ignorePatterns": "*.js",
  "extends": [
    "airbnb-typescript/base"
  ],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "eol-last": "off",
    "spaced-comment": "off",
    "linebreak-style": "off",
    "rules": {
      "prefer-destructuring": ["error", {"object": true, "array": false}]
    }
  }
}